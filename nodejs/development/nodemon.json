{
  "restartable": "rs",
  "ignore": [
    ".git",
    "lib",
    "node_modules",
    "src/plugins/-*/**/*.ts"
  ],
  "delay": 2000,
  "signal": "SIGHUP",
  "exec": "ts-node node_modules/@bettercorp/service-base/lib/dev.js",
  "watch": [
    "src/**/*.ts",
    "sec-config.yaml"
  ],
  "ext": "ts,json,yaml"
}