{
  "name": "@bettercorp/service-base",
  "license": "AGPL-3.0-only",
  "repository": {
    "url": "https://gitlab.com/BetterCorp/public/service-base"
  },
  "scripts": {
    "dev": "nodemon -L --watch src/**/*.ts --watch plugins/**/*.ts --exec ts-node src/index.ts",
    "start": "node lib/index.js",
    "build": "tsc",
    "postinstall": "node ./postinstall.js",
    "versionOld": "node ./build/version-bcorp.js $0",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "node ./node_modules/mocha/bin/mocha.js --reporter mocha-junit-reporter --reporter-options mochaFile=junit.xml",
    "testDev": "node ./node_modules/mocha/bin/mocha.js"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "sourceFiles/**/*",
    "lib/**/*",
    "test/**/*",
    "build/**/*",
    "templates/**/*",
    "postinstall.js"
  ],
  "main": "lib/index.js",
  "version": "8.0.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@bettercorp/tools": "^2.0.20220714140658",
    "@types/node": "^18.6.2",
    "@types/yargs": "^17.0.10",
    "yargs": "^17.5.1"
  }
}
