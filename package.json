{
  "name": "@bettercorp/service-base",
  "license": "AGPL-3.0-only",
  "repository": {
    "url": "https://gitlab.com/BetterCorp/public/service-base"
  },
  "scripts": {
    "dev": "nodemon -L --watch src/**/*.ts --watch plugins/**/*.ts --exec ts-node src/index.ts",
    "start": "node lib/index.js",
    "build": "tsc",
    "postinstall": "node ./postinstall.js",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "node ./node_modules/nyc/bin/nyc.js --reporter json --reporter lcov ./node_modules/mocha/bin/mocha.js --reporter json --reporter-options output=junit.json",
    "testDev": "node ./node_modules/nyc/bin/nyc.js ./node_modules/mocha/bin/mocha.js"
  },
  "bin": {
    "bsb": "lib/bootstrap.js"
  },
  "files": [
    "lib/**/*",
    "postinstall.js"
  ],
  "main": "lib/index.js",
  "version": "8.0.0",
  "devDependencies": {
    "@types/node": "^18.6.2",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  },
  "dependencies": {
    "@bettercorp/tools": "^2.0.20220714140658"
  },
  "bsb_project": true
}